{
  "name": "xenia-webserver",
  "version": "1.0.0",
  "description": "Xenia Web Services is a REST API designed to support the Xenia Xbox 360 emulator in providing online and multiplayer functionality. ",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:docker": "docker build -t xenia-webservices .",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"**/public/**/*.js\"",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:docker": "docker compose up",
    "lint": "eslint \"src/**/*.ts\" test",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "prettier-check": "prettier \"**/*.ts\" \"**/public/**/*.js\" --check",
    "prettier-write": "prettier \"**/*.ts\" \"**/public/**/*.js\" --write",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate": "node ./dist/src/infrastructure/persistance/scripts/migrate.js",
    "seed": "node ./dist/src/infrastructure/persistance/scripts/seed.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.2",
    "@nestjs/core": "^10.3.2",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/mongoose": "^10.0.4",
    "@nestjs/platform-express": "^10.3.2",
    "@nestjs/sequelize": "^10.0.0",
    "@nestjs/serve-static": "^4.0.1",
    "@nestjs/swagger": "^7.3.0",
    "@sequelize/core": "^7.0.0-alpha.36",
    "@types/uuid": "^9.0.8",
    "axios": "^1.6.7",
    "compression": "^1.7.4",
    "dotenv": "^16.4.1",
    "ipaddr.js": "^2.1.0",
    "nestjs-real-ip": "^3.0.1",
    "private-ip": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "sequelize": "^6.36.0",
    "sequelize-cli": "^6.6.2",
    "sequelize-typescript": "^2.1.6",
    "tiny-types": "^1.21.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.2",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.12",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.16",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jest": "29.7.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "roots": [
      "<rootDir>"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
